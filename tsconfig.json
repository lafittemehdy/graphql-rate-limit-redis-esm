{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "Node16",
        "moduleResolution": "node16",
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022"
    },
    "exclude": [
        "dist",
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}